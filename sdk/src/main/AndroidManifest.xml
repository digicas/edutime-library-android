<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.edukids.sdk">

    <uses-permission android:name="com.edukids.permission.ACCESS_DATA" />

    <application tools:ignore="MissingAutoRevokeTolerance">

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <meta-data
                android:name="com.edukids.sdk.EduSdkInitializer"
                android:value="androidx.startup" />

        </provider>

        <receiver
            android:name=".comms.SdkReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="com.edukids.permission.ACCESS_DATA">
            <intent-filter>
                <action android:name="com.edukids.sdk.ACTION_RECEIVE_DATA" />
            </intent-filter>
        </receiver>

    </application>

</manifest>